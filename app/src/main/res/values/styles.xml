<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:title">@color/zesamBlack</item>
        <item name="android:background">@color/zesamBlack</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HighlightPressedColor" parent="AppTheme">
        <item name="android:colorFocusedHighlight">@color/zesamBlue</item>
    </style>

    <style name="textBorder" parent="Widget.AppCompat.EditText">
        <item name="android:strokeColor">@color/zesamBlack</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
