<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:elevation="5dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="ZESAM"
        android:textColor="@color/zesamBlue"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_logged_out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar_logged_out" />

    <android.support.constraint.Guideline
        android:id="@+id/toolbar_guideline_logged_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="65dp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_logged_out"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:theme="@style/ToolBarStyle"
        app:layout_constraintBottom_toTopOf="@+id/toolbar_guideline_logged_out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>